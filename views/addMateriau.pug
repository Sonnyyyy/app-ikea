extends layout
block content
    main 
      div.centered 
        h1 Ajouter un nouveau mat√©riau
        form(action="",method="post")
          label Nom 
          <input type="text" id="name" name="name"/> 
          br
          label Entreprise 
          select(name="entreprise").entreprise_selected
            each entrep in entreprises
              option(value=entrep._id) #{entrep.name}
          br
          button(type="submit",class="add") Ajouter le materiau

          if error
            span.alert #{error}